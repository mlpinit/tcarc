<% @title = "Sign Up" %>

<div class='form-horizontal col-md-6 col-md-offset-3'>
  <%= form_for user do |f| %>
    <div class='form-group'>
      <%= f.label :name, class: 'control-label col-md-4' %>
      <div class="col-md-8">
        <%= f.text_field :name, placeholder: :name, class: 'form-control' %>
      </div>
    </div>
    <div class='form-group'>
      <%= f.label :email, class: 'control-label col-md-4' %>
      <div class="col-md-8">
        <%= f.text_field :email, placeholder: :email, class: 'form-control' %>
      </div>
    </div>
    <div class='form-group'>
      <%= f.label :password, class: 'control-label col-md-4' %>
      <div class="col-md-8">
        <%= f.password_field :password, placeholder: :password, class: 'form-control' %>
      </div>
    </div>
    <div class='form-group'>
      <%= f.label :password_confirmation, class: 'control-label col-md-4' %>
      <div class="col-md-8">
        <%= f.password_field :password_confirmation, placeholder: :password_confirmation, class: 'form-control' %>
      </div>
    </div>

    <div class='form-group'>
      <div class="col-md-offset-4 col-md-8">
        <%= f.submit "Sign up", class: 'btn btn-success' %>
      </div>
    </div>
  <% end %>
</div>

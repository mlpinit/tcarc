<% @title = "Sign In" %>

<div class='form-horizontal col-md-6 col-md-offset-3'>
  <%= form_tag signin_path do %>
    <div class='form-group'>
      <%= label_tag :email, nil, class: 'control-label col-md-4' %>
      <div class="col-md-8">
        <%= text_field_tag :email, nil, placeholder: 'email', class: 'form-control' %>
      </div>
    </div>
    <div class='form-group'>
      <%= label_tag :password, nil, class: 'control-label col-md-4' %>
      <div class="col-md-8">
        <%= text_field_tag :password, nil, placeholder: 'password', class: 'form-control' %>
      </div>
    </div>
    <div class='form-group'>
      <div class="col-md-offset-4 col-md-8">
        <%= submit_tag 'Sign In', class: 'btn btn-success' %>
      </div>
    </div>
  <% end %>
</div>
